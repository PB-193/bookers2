<div class="container px-5 px-sm-0 mt-3">
  <div class="row">

<div class="col-md-3">
  <h2>User info</h2>
  <div>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_images.jpg', size: "100x100" %>
  <% end %>
  </div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= @user.name  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <div>
    <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<br></br>

  <%= render 'books/list',{user: @user,user1: @user1,book: @book} %>
</div>
   <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
         <td><%= image_tag user.get_profile_image(100,100) %></td>
         <td><%= user.name %></td>
         <td><%= link_to "Show",user_path(user.id)%></td>
        </tr>
      <% end %>
      </tbody>

    </table>
  </div>
</div>