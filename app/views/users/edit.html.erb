<h2>User info</h2>


<div>
 <%= form_with model: @user do |f| %>
 
     <div class="error-message">  
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error has occurred
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
     </div>

 
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName" %></p>
  <label for="inputImage">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>  
  <p>introduction</p>
  <p><%= f.text_area :introduction %></p>
  <p><%= f.submit "Update User" %></p>
 <% end %>
</div>