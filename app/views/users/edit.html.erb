<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<div class="user-info mt-3">
  <h2>User info</h2>
</div>
<div>
 <%= form_with model: @user do |f| %>
 
     <div class="error-message">  
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error has occurred
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
     </div>

 
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", class:"btn-block" %></p>
  <label for="inputImage">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>  
  <p>introduction</p>
  <p><%= f.text_area :introduction, class:"btn-block" %></p>
  <p><%= f.submit "Update User", class:"btn btn-secondary" %></p>
 <% end %>
</div>

</div>
</div>
</div>