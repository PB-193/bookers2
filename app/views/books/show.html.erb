<div>
  <% if flash[:notice] %>
  <div class="btn-block btn btn-success">
    <%= flash[:notice]%>
  </div>
  <% end %>
</div>

<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    
<div class="col-md-3">
  <h2>User info</h2>
  <div>
  <% if @user.profile_image.attached? %>
    <%= image_tag @book1.user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_images.jpg', size: "100x100" %>
  <% end %>
  </div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= @book1.user.name  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book1.user.introduction %></th>
    </tr>
  </table>
  <div>
    <%= link_to edit_user_path(@book1.user), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<br></br>

    <%= render 'books/list', {user: @user,book: @book,book1: @book1} %>
</div>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
        <%= link_to user_path(@book1.user.id) do %>
          <%= image_tag @book1.user.get_profile_image(100,100) %>
        <% end %>
        </td>
        <td><%= link_to @book1.title,book_path(@book1.id)   %></td>
        <td><%= @book1.body %></td>
        <% if @book1.user == current_user %>
          <td><%= link_to "Edit",edit_book_path(@book1.id),class:"btn btn-success" %></td>
        <% end %>
        <% if @book1.user == current_user %>
          <td><%= link_to "Destroy",book_path(@book1.id),class:"btn btn-danger",method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
    </table>
    <tr>
      <td><%= link_to @book1.user.name, user_path(@book1.user.id) %></td>
    </tr>
   </div>
</div>