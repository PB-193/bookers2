<div class="col-md-4">
  <h2>User info</h2>
  <div>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_images.jpg', size: "100x100" %>
  <% end %>
  </div>
  <table>
    <tr>
      <th>name</th>
      <th><%= user.name  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <th>
    <%= link_to "edit",edit_user_path(user) %>
    </th>
  </table>
  
</div>

<div>
  <h2>New book</h2>
   <%= form_with model: book,url: "/books", method: :post do |f| %>
   
    <div class="error-message">  
      <% if book.errors.any? %>
        <%= book.errors.count %> error has occurred
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>   

   
    <div class="books-text">
      <div class="title-box">
        <p>Title</p>
        <p>
          <%= f.text_field:title %>
        </p>
      </div>
      <div class="body-box">
        <p>Opinion</p>
        <p>
          <%= f.text_area:body %>
        </p>
      </div>
      <div class="btn-box">
        <%= f.submit "Create Book" %>
      </div>
    </div>
    <% end %>
</div>