<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    
<div class="col-md-3">
  <h2>User info</h2>
  <div>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_images.jpg', size: "100x100" %>
  <% end %>
  </div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= @user.name  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <div>
    <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<br></br>

   <%= render 'books/list', {user: @user,book: @book,user1: @user1,book1: @book1} %>
</div>
 
   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
       <table class="table">
       <thead>
          <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
          </tr>
       </thead>

       <tbody>
       <% @books.each do |book| %>
       <tr>
         <td>
         <%= link_to user_path(book.user.id) do %>   
         　<%= image_tag book.user.get_profile_image(100,100) %>
         <% end %>
       　</td>
       　<td>
        　  <%= link_to book.title, book_path(book.id) %>
         </td>
         <td><%= book.body %></td>
       </tr>
      <% end %>
      </tbody>
      </table>
    </div>
</div>