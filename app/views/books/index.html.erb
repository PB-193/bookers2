<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
   <%= render 'list', {user: @user,book: @book} %>
   
   <div class="col-md-8">
     <h2>Books</h2>
       <table>
       <thead>
          <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
          </tr>
       </thead>

       <tbody>
       <% @books.each do |book| %>
       <tr>
         <td> 
      　 <%= link_to book_path(book.id) do %>
         　<%= image_tag book.user.get_profile_image(100,100) %>
       　<% end %>
       　</td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       </tr>
      <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>