<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <div class="edit-title mt-3">
      <h1>Editing Book</h1>
    </div>
    
    <%= form_with model: @book do |f| %>
    <div class="books-text">
      
      <div class="error-message">  
        <% if @book.errors.any? %>
        <ul class="text-danger">
          <%= @book.errors.count %> error has occurred
        </ul>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
        <% end %>
      </div>
      
      <div class="title-box">
        <p>Title</p>
        <p>
          <%= f.text_field:title, class:"btn-block" %>
        </p>
      </div>
      <div class="body-box">
        <p>Opinion</p>
        <p>
          <%= f.text_area:body, class:"btn-block" %>
        </p>
      </div>
      <div class="btn-box">
        <%= f.submit "Update Book", class:"btn btn-success" %>
      </div>
    </div>
    <% end %>
    
    <div class="book-btn" >
      <%= link_to "Show",book_path(@book),class:"btn btn-info mt-3" %>
      <%= link_to "Back",books_path,class:"btn btn-info mt-3" %>
    </div>
  </div>

</div>
</div>
</div>