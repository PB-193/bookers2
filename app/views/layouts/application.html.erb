<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <br></br>
  <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container">
    <a class="navbar-brand" href="/"><span>Bookers</span></a>
    <div class="header-list">
    <ul class="navbar-nav ml-auto ">
    <% if user_signed_in? %>
      <li class="nav-link text-align ">
        <%= link_to root_path do %>
          <i class="fas fa-home"></i><span> Home</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to users_path do %>
          <i class="fas fa-users"></i><span> Users</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to books_path do %>
          <i class="fas fa-book-open"></i><span> Books</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i><span> Log out</span>
        <% end %>

      </li>
    <% else %>
      <li class="nav-link text-align navbar-brand">
        <%= link_to root_path do %>
          <i class="fas fa-home"></i><span> Home</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to about_path do %>
          <i class="fas fa-link"></i><span> About</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to new_user_registration_path do %>
          <i class="fas fa-user-plus"></i><span> Sign Up</span>
        <% end %>
      </li>
      <li class="nav-link text-align">
        <%= link_to new_user_session_path do %>
          <i class="fas fa-sign-in-alt"></i><span> Log in</span>
        <% end %>
      </li>
    <% end %>
    </ul>
    </div>
    </nav>
  </header>
  <main>
  <%= yield %>
  </main>
  <footer>
    <div>
      <div>
        <div>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
