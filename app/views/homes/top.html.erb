<div>
  <% if flash[:notice] %>
  <div class="btn-block btn btn-success">
    <%= flash[:notice]%>
  </div>
  <% end %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>Welcome to<span><i class="fas fa-book"></i></span>Bookers!!</h1>
      <p>In <span><i class="fas fa-book"></i></span><strong>Bookers,</strong></p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p>about various books!</p>

      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <div class="col btn btn-info btn-sm btn-block mb-3 ">
            <%= link_to "Log in", new_user_session_path, class:"text-white" %>
          </div>
        </div>
        <div class="row">
          <div class="col btn btn-success btn-sm btn-block " >
            <%= link_to "Sign up", new_user_registration_path, class:"text-white" %>
          </div>
        </div>
      </div>
    </div>
  </div>
